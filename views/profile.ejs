                                    <div class="card-body">
                                        <h5 class="card-title ">About Me</h5>
                                        <div class="card-body border-bottom border-secondary-subtle">
                                            <p class="card-text">
                                                <%=text%>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="card-footer border-0 align-self-end">
                                        <%if(currentUser && author.equals(currentUser.id)){%>
                                            <button type="button" class="btn btn-outline-secondary btn-sm"
                                                data-bs-toggle="modal" data-bs-target="#avatarPutModal">
