<% layout("layout/boilerplate") %>
    <%=user.FavColor%>
        <div class="container">
            <div class="row justify-content-center">



                <div class="box d-none d-md-block col-md-4 border border-5 border-dark-subtle p-3 me-3 rounded align-self-start"
                    style="max-width: 19rem;">
                    <div>
                        <%for( let {text,id,image:{url}, author} of avatar){%>
                            <div class="card mb-5" style="">
                                <img class="m-1" src="<%=url%>" class="rounded float-start m-2 flex-fill "
                                    style="min-width: 95%; max-width: 100%;" alt="">
