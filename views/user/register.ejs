<% layout("layout/boilerplate") %>

    <div class="col-6 offset-3">
        <h1 class="mb-5">Register</h1>
        <form action="/register" method="POST">
            <input class="form-control mb-1" type="text" name="name" id="name" placeholder="Name">
            <input class="form-control mb-1" type="email" name="email" id="email" placeholder="Email">
            <input class="form-control mb-1" type="text" name="username" id="username" placeholder="Username">
            <input class="form-control mb-3" type="password" name="password" id="password" placeholder="Password">
            <button class="btn btn-dark mb-3">Login</button>
        </form>
        <a class="link-secondary" href="/">Cancel</a>
    </div>