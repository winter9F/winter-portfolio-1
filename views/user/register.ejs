<% layout("layout/boilerplate") %>

    <div class="col-6 offset-3">
        <h1 class="mb-5">Register</h1>
        <form action="/register" method="POST" class="needs-validation" novalidate>
            <input class="form-control mb-1" type="text" name="name" id="name" placeholder="Name" required>
            <input class="form-control mb-1" type="email" name="email" id="email" placeholder="Email" required>
            <input class="form-control mb-1" type="text" name="username" id="username" placeholder="Username" required>
            <input class="form-control mb-3" type="password" name="password" id="password" placeholder="Password"
                required>
            <button class="btn btn-dark mb-3">Sign up</button>
        </form>
        <a class="link-secondary" href="/">Cancel</a>
    </div>











    <script>
        (() => {
            'use strict'

            const forms = document.querySelectorAll('.needs-validation')

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>